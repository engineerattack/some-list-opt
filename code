if(a==1):
    mylist=["i phone","mi","vivo","oneplus","oppo"]
    print("all items of the list: ")
    for items in mylist:
        print(item)
    
elif(a==2):
    fruits=["APPLE","CHERRY","DRAGON FRUIT"]
